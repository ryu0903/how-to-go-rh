<% provide(:title, "Notification") %>
 <div class="gtco-container">
    <div class="col-md-8 col-md-offset-2">
      <p></p>
      <% if @notifications.present? %>
        <%= link_to notification_path(@notifications), class: 'notification-delete', method: :delete, data: { confirm: "通知を全て削除しますか？" } do %>
          <i class="fas fa-trash" style="color: gray;"></i>
          <h7 style="color: gray;">Delete all</h7>
        <% end %>
        <ul id="notifications" class="feed">
          <%= render @notifications %>
        </ul>
      <% else %>
        <div class="text-center page-titles">通知はありません</div>
      <% end %>
    </div>
  </div>