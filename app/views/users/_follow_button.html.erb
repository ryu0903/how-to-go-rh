<% unless current_user?(user) %>
    <% if current_user.following?(user) %>
      <%= form_with(model: current_user.follow_relationships.find_by(follow_id: user.id), method: :delete, data: {"turbolinks" => false}) do |f| %>
        <%= hidden_field_tag :follow_id, user.id %>
        <%= f.submit 'Following', class: "btn btn-danger btn-block" %>
      <% end %>
    <% else %>
      <%= form_with(model: current_user.follow_relationships.build, data: {"turbolinks" => false}) do |f| %>
        <%= hidden_field_tag :follow_id, user.id %>
        <%= f.submit 'Follow', class: "btn btn-primary btn-block" %>
      <% end %>
    <% end %>
  <% end %>  
  