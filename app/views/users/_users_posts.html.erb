<main class="p-3">
  <ul class="nav nav-tabs nav-justified">
    <li class="nav-item">
      <a href="#destination" class="nav-link active" data-toggle="tab">Destination <span class="badge badge-secondary"><%= @user.destinations.count %></span></a>
    </li>
    <li class="nav-item">
      <a href="#schedule" class="nav-link" data-toggle="tab">Schedule </a>
    </li>
  </ul>

  <div class="tab-content">
    <div id="destination" class="tab-pane active destinations">
      <%if @user.destinations.any? %>
        <%= render 'destinations/destination', destinations: @destinations %>
        <%= paginate @destinations %>
      <% end %>
    </div>
    <div id="schedule" class="tab-pane">
      
    </div>
  </div>
</main>