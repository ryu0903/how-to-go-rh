 
    <% unless current_user?(@user) %>
      <% if current_user.following?(@user) %>
        <%= form_with(model: current_user.follow_relationships.find_by(follow_id: @user.id), local: true, method: :delete) do |f| %>
          <%= hidden_field_tag :follow_id, @user.id %>
          <%= f.submit 'Following', class: "btn btn-danger feed-follow-button" %>
        <% end %>
      <% else %>
        <%= form_with(model: current_user.follow_relationships.build, local: true) do |f| %>
          <%= hidden_field_tag :follow_id, @user.id %>
          <%= f.submit 'Follow', class: "btn btn-primary feed-follow-button" %>
        <% end %>
      <% end %>
    <% end %>    
  